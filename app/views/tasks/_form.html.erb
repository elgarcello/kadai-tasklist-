<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :status, '進行状況' %>
  <%= f.select :status,[["開始","開始"],["進行中","進行中"],["終了","終了"]] %>
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  <%= f.submit '作成' %>
<% end %> 